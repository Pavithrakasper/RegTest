            android:text=" "/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
